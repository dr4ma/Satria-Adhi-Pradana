<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/icon_box"
        android:layout_width="@dimen/icon_box_size"
        android:layout_height="@dimen/icon_box_size"
        android:layout_marginEnd="15dp"
        android:background="@drawable/item_card_profile_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icon_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_kids"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:textColor="@color/colorTextCategory"
        tools:text="Headphones"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toStartOf="@id/icon_box"
        app:layout_constraintTop_toBottomOf="@id/icon_box"
        app:layout_constraintEnd_toEndOf="@id/icon_box"
        />

</androidx.constraintlayout.widget.ConstraintLayout>